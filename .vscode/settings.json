{
  "editor.linkedEditing": true,
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "quickfix.biome": "explicit",
    "source.organizeImports": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 120,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "explorer.fileNesting.patterns": {
    "app.config.ts": "*.env, babel.config.*, biome.*, eas.*, metro.config.*, .lintstaged*, .prettier*, commitlint.*, tsconfig*",
    "package.json": ".yarnrc*, yarn*, .release-it*, .auto-changelog"
  },
  "cSpell.words": ["aurebesh", "sabersprops"],
  "cSpell.ignoreRegExpList": ["/from\\\\s+(['\\\"]).*\\\\1/"],
  "cSpell.ignoreWords": [
    "actionsheet",
    "biomejs",
    "commitlint",
    "dayjs",
    "echarts",
    "gluestack",
    "hookform",
    "pressable",
    "shopify",
    "supabase",
    "zustand"
  ]
}
