{
  "$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
  "files": {
    "ignoreUnknown": true,
    "ignore": ["**/node_modules/*.*", "**/.expo/*"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 120,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingComma": "all",
      "bracketSameLine": true,
      "bracketSpacing": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "linter": {
    "enabled": true,
    "ignore": ["**/components/_ui/primitives/*"],
    "rules": {
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "error"
      },
      "nursery": {
        "useSortedClasses": {
          "options": {
            "functions": ["clsx", "cva", "tw", "cn"]
          }
        }
      },
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
