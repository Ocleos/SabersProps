{
  "cli": {
    "version": ">= 2.8.0",
    "appVersionSource": "remote"
  },
  "build": {
    "base": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "development": {
      "developmentClient": true,
      "extends": "base",
      "releaseChannel": "development"
    },
    "preview": {
      "extends": "base",
      "releaseChannel": "preview"
    },
    "production": {
      "extends": "base",
      "releaseChannel": "production",
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {}
  }
}
